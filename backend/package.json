{
  "name": "minimal-webserver",
  "version": "1.0.0",
  "description": "Minimal Node.js webserver",
  "main": "app.js",
  "scripts": {
    "start": "NODE_NO_WARNINGS=ExperimentalWarning node --loader ts-node/esm app.ts",
    "start:prod": "node dist/app.js",
    "dev": "NODE_NO_WARNINGS=ExperimentalWarning nodemon --exec node --loader ts-node/esm app.ts",
    "migrate": "NODE_NO_WARNINGS=ExperimentalWarning node --loader ts-node/esm src/config/schema.ts",
    "build": "tsc"
  },
  "keywords": [
    "webserver",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "module",
  "ts-node": {
    "esm": true
  }
}
